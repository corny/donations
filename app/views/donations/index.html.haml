%h1
  = title_content do
    Zuwendungen
    - if @recipient
      an #{@recipient}
    - if @purpose
      für #{@purpose}

%table.table.table-striped
  %thead
    %th Von
    %th Bis
    - if !@purpose
      %th Zweck
    - if !@recipient
      %th Empfänger
    %th Geber
    %th.number Summe
    %th Art
  %tbody
    - @donations.order(:date_begin).each do |row|
      %tr
        %td= row.date_begin
        %td= row.date_end
        - if !@purpose
          %td= link_to row.purpose, donations_path(purpose: row.purpose)
        - if !@recipient
          %td= link_to row.recipient, recipient_path(row.recipient.slug)
        %td= row.donor
        %td.number= number_to_currency row.amount
        %td= row.kind
  %tfoot
    %tr
      %th{colspan: 4 }
      %th.number= number_to_currency @donations.sum(&:amount)
      %th
